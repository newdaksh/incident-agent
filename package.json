{
  "name": "incident-agent",
  "version": "1.0.0",
  "description": "MERN + GenAI + n8n Incident Management Platform",
  "private": true,
  "workspaces": [
    "services/backend",
    "services/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:genai\"",
    "dev:backend": "cd services/backend && npm run dev",
    "dev:frontend": "cd services/frontend && npm run dev",
    "dev:genai": "cd services/genai-service && python -m uvicorn app.main:app --reload --port 8000",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd services/backend && npm run build",
    "build:frontend": "cd services/frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd services/backend && npm test",
    "test:frontend": "cd services/frontend && npm test",
    "test:integration": "jest tests/integration --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd services/backend && npm run lint",
    "lint:frontend": "cd services/frontend && npm run lint",
    "seed": "node scripts/seed/seed-mongo.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "n8n:import": "bash scripts/import-n8n-workflows.sh",
    "setup": "npm install && npm run seed && npm run n8n:import"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/incident-agent.git"
  },
  "keywords": [
    "incident-management",
    "mern",
    "genai",
    "n8n",
    "automation",
    "monitoring",
    "chatbot",
    "devops"
  ],
  "author": "Your Organization",
  "license": "MIT"
}
